# Identidade do device (um por Raspberry)
DEVICE_KEY=raspi-001

# Sensor
DHT_TYPE=DHT11
DHT_GPIO=D4
DHT_USE_PULSEIO=0

# SQLite
SQLITE_PATH=./data/monitoramento.db
READ_INTERVAL_SECONDS=10
READ_RETRY_SLEEP_SECONDS=2.0
MAX_CONSECUTIVE_READ_ERRORS=10

# MySQL (Sync)
MYSQL_ENABLED=1
MYSQL_HOST=192.168.10.15
MYSQL_PORT=3306
MYSQL_DB=leathersense
MYSQL_USER=leathersense_ingest
MYSQL_PASS=COLOQUE_AQUI
MYSQL_SSL_DISABLED=1

# Retenção
ENABLE_RETENTION=1
RETENTION_DAYS=90
